  <body>
    <nav>
      <div>
        <button id="new-map" type="button">+</button>
      </div>
      <div>
      <button class="login-register" type="button">login / register</button>
      <button id="user-menu-btn" type="button">
        <i id="profile-pic" class="fas fa-user-circle"></i>
      </button>
      <div id="user-menu">
